        // ndiv    {key-positions = <3 4>; bindings = <&kp SLASH>; layers = <DEF COL>; COMBO;};                    // /
        // nplus   {key-positions = <15 16>; bindings = <&kp PLUS>; layers = <DEF COL>; COMBO;};                   // +
