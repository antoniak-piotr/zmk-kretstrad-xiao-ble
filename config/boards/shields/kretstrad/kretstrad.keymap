        // bslh    {key-positions = <19 29>; bindings = <&kp BSLH>; layers = <DEF COL>; COMBO;};                   // \|

        // odwrotny (GRAVE) oraz zwykły (APOS) apostrof oraz tylda (TILDA) i cudzysłów ("): `, ', ~, "
        // grave   {key-positions = <14 24>; bindings = <&kp GRAVE>; layers = <DEF COL>; COMBO;};                  // `~
        // sqt     {key-positions = <15 25>; bindings = <&kp APOS>; layers = <DEF COL>; COMBO;};                   // '"

        // klawiatura numeryczna
