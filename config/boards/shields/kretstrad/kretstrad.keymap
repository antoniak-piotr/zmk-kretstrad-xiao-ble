        // nb      {key-positions = <17 27>; bindings = <&kp B>; layers = <NUM>; COMBO;};                          // B
        // nc      {key-positions = <18 28>; bindings = <&kp C>; layers = <NUM>; COMBO;};                          // C
        // nd      {key-positions = <6 16>; bindings = <&kp D>; layers = <NUM>; COMBO;};                           // D
        // ne      {key-positions = <7 17>; bindings = <&kp E>; layers = <NUM>; COMBO;};                           // E
        // nf      {key-positions = <8 18>; bindings = <&kp F>; layers = <NUM>; COMBO;};                           // F
        // ndot    {key-positions = <26 27>; bindings = <&mt DOT COMMA>; layers = <NUM>; COMBO;};                  // .,

        // klawisze funkcyjne
        f11     {key-positions = <4 14>; bindings = <&kp F11>; layers = <FUN>; COMBO;};                        // F11
        f12     {key-positions = <5 15>; bindings = <&kp F12>; layers = <FUN>; COMBO;};                        // F12

        // klawisze navigacyjne
        // pgup    {key-positions = <16 26>; bindings = <&kp PG_UP>; layers = <NAV>; COMBO;};                       // PAGE UP
        // pgdn    {key-positions = <18 28>; bindings = <&kp PG_DN>; layers = <NAV>; COMBO;};                       // PAGE DOWN
        // home    {key-positions = <26 27>; bindings = <&kp HOME>; layers = <NAV>; COMBO;};                        // HOME
        // end     {key-positions = <27 28>; bindings = <&kp END>; layers = <NAV>; COMBO;};                         // END
        slash   {key-positions = <18 28>; bindings = <&kp LC(SLASH)>; layers = <NAV>; COMBO;};                  // Ctrl + / - przydaje się do komentowania kodu

        // wyjście z Magnify
        exit    {key-positions = <4 14>; bindings = <&kp LG(ESC)>; layers = <NAV>; COMBO;};                     // EXIT
     };

