        combo_magnifier_exit {
            timeout-ms = <50>;
            key-positions = <14 24>;
            bindings = <&kp LG(ESC)>;
            layers = <BTH>;
        };

// nawiasy        
        combo_lpar {
            timeout-ms = <50>;
            key-positions = <13 23>;
            bindings = <&kp LPAR>;
            layers = <DEF GRN>;
        };
        combo_rpar {
            timeout-ms = <50>;
